        style="@style/buttomRow">

        <Button
            style="@style/buttomNumber"
            android:text="1"
            />
        <Button
            style="@style/buttomNumber"
            android:text="2"/>
        <Button
            style="@style/buttomNumber"
            android:text="3"
            />
        <Button
            style="@style/buttomOperator"

            android:text="+"/>



    </LinearLayout>
    <LinearLayout
        style="@style/buttomRow">

        <Button
            style="@style/buttomNumber"
            android:text="."
            />
        <Button
            style="@style/buttomNumber"
            android:text="0"/>
        <Button
            style="@style/buttomNumber"
            android:layout_weight="2"
            android:text="="
            android:background="@color/orange"
