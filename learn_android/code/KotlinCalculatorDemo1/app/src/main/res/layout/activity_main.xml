            android:text=""
             />
        <Button
            style="@style/buttomOperator"

            android:text="/"/>



    </LinearLayout>
    <LinearLayout
        style="@style/buttomRow">

        <Button
            style="@style/buttomNumber"
            android:text="7"
            />
        <Button
            style="@style/buttomNumber"
            android:text="8"/>
        <Button
            style="@style/buttomNumber"
            android:text="9"
            />
        <Button
            style="@style/buttomOperator"

            android:text="x"/>



    </LinearLayout>
    <LinearLayout
        style="@style/buttomRow">

        <Button
            style="@style/buttomNumber"
            android:text="4"
            />
